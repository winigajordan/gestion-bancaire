{%  extends 'caisse_operation/index.html.twig' %}
{% block operation%}
    <div class="container">
        {% for message in app.flashes('done') %}
            <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="alert alert-success alert-with-icon" data-notify="container">
                    <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                        <i class="tim-icons icon-simple-remove"></i>
                    </button>
                    <span data-notify="icon" class="tim-icons icon-bell-55"></span>
                    <span data-notify="message"> {{ message }}</span>
                </div>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="alert alert-danger alert-with-icon" data-notify="container">
                    <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                        <i class="tim-icons icon-simple-remove"></i>
                    </button>
                    <span data-notify="icon" class="tim-icons icon-bell-55"></span>
                    <span data-notify="message"> {{ message }}</span>
                </div>
            </div>
        {% endfor %}
        <div class="card">
            <div class="card-header">
                <h3>
                    Creation de carte bancaire
                </h3>
            </div>
            <div class="card-body">
                <form id="form1" method="post" action="{{ path('caisse_add_carte') }}">

                    <div class="form-row d-flex align-items-center justify-content-center">

                        <div class="form-group col-md-auto">
                            <label for="inputEmail4">Numero de compte </label>
                            <input type="text" name="numero" class="form-control" placeholder="Numero">
                        </div>
                        <div class="form-group col-md-auto">

                            <input type="submit" value="Creer une carte pour ce numero" class="btn ">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}